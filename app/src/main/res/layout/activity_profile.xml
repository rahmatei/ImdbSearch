<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ProfileLayout"
        tools:context=".Features.Profile.ProfileActivity">
    <View
            android:id="@+id/bgHeader"
            android:layout_width="413dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_top_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/txtinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="اطلاعات کاربری"
            android:textColor="#abf"
            android:textSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="اطلاعات کاربری خود را جهت دسترسی کامل \n به امکانات برنامه تکمیل نمایید "
            android:textAlignment="center"
            android:textColor="#abf"
            app:layout_constraintEnd_toEndOf="@+id/bgHeader"
            app:layout_constraintStart_toStartOf="@+id/bgHeader"
            app:layout_constraintTop_toBottomOf="@+id/txtinfo" />

    <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bgHeader"></View>


    <de.hdodenhof.circleimageview.CircleImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageView2"
            android:src="@drawable/imageprofile"
            app:civ_border_width="2dp"
            app:civ_border_color="#2A2A2A"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3"
    />

    <EditText
            android:id="@+id/edtName"
            android:layout_width="311dp"
            android:layout_height="59dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edittext"
            android:hint="نام "
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
            android:id="@+id/edtFamily"
            android:layout_width="311dp"
            android:layout_height="59dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edittext"
            android:inputType="textPersonName"
            android:hint="نام خانوادگی "
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/edtName" />
    <EditText
            android:id="@+id/edtEmail"
            android:layout_width="311dp"
            android:layout_height="59dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edittext"
            android:inputType="textEmailAddress"
            android:hint="ایمیل"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/edtFamily" />

    <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/positive_button"
            android:text="ثبت"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

    <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:text="انصراف"
            android:textColor="#7B7B7B"
            android:background="@drawable/negative_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSave" />
</androidx.constraintlayout.widget.ConstraintLayout>